<div class="flex flex-col items-center justify-center flex-1 w-full h-screen p-6 rounded-lg shadow-md bg-gray-50 ">
    <div class="flex-1 w-1/2 p-6 text-center bg-white rounded-lg shadow-md max-h-100 ">
      <h2 class="text-lg text-5xl font-bold">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    
    <%= f.email_field :email, autofocus: true, class: "border w-1/3 rounded-md px-4 py-2 mb-5",placeholder:"eamil",autocomplete: "email" %>
  </div>

  <div class="field">
     
     
    <%= f.password_field :password, class: "border w-1/3 rounded-md px-4 py-2 mb-5",placeholder:"new-password",autocomplete: "new-password" %>
  </div>

  <div class="field">
     
    <%= f.password_field :password_confirmation, class: "border w-1/3 rounded-md px-4 py-2 mb-5",placeholder:"confirm-password",autocomplete: "new-password" %>
  </div>

  <button class="w-1/3 px-4 py-2 mt-5 text-lg font-semibold text-purple-600 bg-purple-200 rounded-lg cursor-pointer actions hover:bg-purple-300"">
    <%= f.submit "Sign up" %>
  </button>
<% end %>

<%= render "devise/shared/links" %>

      </div>
</div>

