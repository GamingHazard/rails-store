<div class="flex flex-col items-center justify-center flex-1 w-full h-screen p-6 rounded-lg shadow-md bg-gray-50 ">
    <div class="flex-1 w-1/2 p-6 text-center bg-white rounded-lg shadow-md max-h-100 ">
      <h2 class="text-lg text-5xl font-bold">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "bg-gray-100 w-1/3 rounded-md px-4 py-2 m-5",placeholder:"enter you registered email" %>
  </div>

  <button class="w-1/2 px-4 py-2 mt-5 text-lg font-semibold text-purple-600 bg-purple-200 rounded-lg cursor-pointer actions hover:bg-purple-300">
    <%= f.submit "Send me reset password instructions" %>
  </button>
<% end %>

<%= render "devise/shared/links",class:"flex flex-row" %>
    </div>
</div>


